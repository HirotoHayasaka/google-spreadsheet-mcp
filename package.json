{
  "name": "google-spreadsheet-mcp",
  "version": "1.0.0",
  "description": "MCP server for Google Spreadsheet integration",
  "type": "module",
  "bin": {
    "google-spreadsheet-mcp": "dist/cli.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npx tsc && chmod +x dist/index.js dist/cli.js",
    "start": "node dist/cli.js",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "google-sheets",
    "spreadsheet",
    "mcp",
    "ai",
    "claude",
    "claude-code"
  ],
  "author": "HirotoHayasaka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/HirotoHayasaka/google-spreadsheet-mcp"
  },
  "homepage": "https://github.com/HirotoHayasaka/google-spreadsheet-mcp#readme",
  "bugs": {
    "url": "https://github.com/HirotoHayasaka/google-spreadsheet-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.1.0",
    "dotenv": "^16.3.1",
    "google-auth-library": "^9.14.0",
    "googleapis": "^144.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "tsx": "^4.7.1",
    "typescript": "^5.2.2",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
